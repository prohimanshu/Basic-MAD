<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridListView.DetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Id : "/>
            <Entry Text="" x:Name="IdEntry" TextColor="Maroon"/>
            <Label Text="Name : "/>
            <Entry Text="" x:Name="NameEntry" TextColor="Maroon"/>
            <Label Text="Address : "/>
            <Entry Text="" x:Name="AddressEntry" TextColor="Maroon"/>
            <Button Text="Back" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>