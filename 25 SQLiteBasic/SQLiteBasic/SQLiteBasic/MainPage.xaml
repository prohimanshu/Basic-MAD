<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SQLiteBasic"
             x:Class="SQLiteBasic.MainPage"
             BackgroundColor="#2bcbff">

    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Name" Placeholder="Name"/>
            <Entry x:Name="Address" Placeholder="Address"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="SaveButton" Text="Save Data" Clicked="SaveButton_Clicked"/>
            <Button x:Name="ShowButton" Text="Show Data" Clicked="ShowButton_Clicked"/>
            </StackLayout>
            <ListView x:Name="Datalist">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Address}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
